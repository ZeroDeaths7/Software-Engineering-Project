<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SMMS - Edit Post</title>
  <link rel="stylesheet" href="/style.css?v=3">
  <style>
    .hidden {
      display: none !important;
    }
    .image-preview-container {
      margin-top: 1rem;
    }
    .image-preview {
      max-width: 200px;
      margin: 10px 0;
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <a href="/" class="logo">SMMS</a>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/posts/create">Create Post</a></li>
        <li><a href="/posts/drafts">Drafts</a></li>
        <li><a href="/posts/scheduled">Posts</a></li>
        <li><a href="/analytics">Analytics</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="page-header">
      <h1>Edit Post</h1>
      <a href="/posts/scheduled" class="btn btn-secondary">‚Üê Back to Posts</a>
    </div>

    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-error">
        <% errors.forEach(error => { %>
          <p><%= error.msg %></p>
        <% }); %>
      </div>
    <% } %>

    <form method="POST" action="/posts/edit/<%= post.id %>" enctype="multipart/form-data" class="form-card">
      <div class="form-group">
        <label for="title">Post Title (Optional):</label>
        <input
          type="text"
          id="title"
          name="title"
          maxlength="200"
          placeholder="Give your post a title"
          value="<%= post.title || '' %>"
        >
        <small>Max 200 characters</small>
      </div>

      <div class="form-group">
        <label for="content">Post Content:</label>
        <textarea
          id="content"
          name="content"
          rows="10"
          maxlength="5000"
          placeholder="Write your post content here..."
          required
        ><%= post.content %></textarea>
        <small>Max 5000 characters</small>
      </div>

      <div class="form-group">
        <label for="image">Change Image:</label>
        <% if (post.image_path) { %>
          <div class="current-image">
            <p>Current image:</p>
            <img src="<%= post.image_path %>" alt="Current post image" class="image-preview">
          </div>
        <% } %>
        <input
          type="file"
          id="image"
          name="image"
          accept="image/jpeg,image/png,image/gif,image/webp"
        >
        <small>Allowed: JPEG, PNG, GIF, WebP. Max 5MB</small>
        <% if (post.image_path) { %>
          <div class="form-check">
            <input type="checkbox" id="removeImage" name="removeImage">
            <label for="removeImage">Remove current image</label>
          </div>
        <% } %>
      </div>

      <div class="form-group">
        <label for="status">Post Status:</label>
        <select id="status" name="status" required>
          <option value="draft" <%= post.status === 'draft' ? 'selected' : '' %>>Draft</option>
          <option value="scheduled" <%= post.status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
          <option value="published" <%= post.status === 'published' ? 'selected' : '' %>>Published</option>
        </select>
      </div>

      <div id="scheduleContainer" class="form-group">
        <label for="scheduledTime">Schedule Time:</label>
        <% /* Helper to convert stored ISO/UTC string to a local datetime-local value */ %>
        <% function toLocalDatetime(value) {
             if (!value) {
               const d = new Date(Date.now() + 3600000);
               const local = new Date(d.getTime() - d.getTimezoneOffset() * 60000);
               return local.toISOString().slice(0,16);
             }
             const d = new Date(value);
             const local = new Date(d.getTime() - d.getTimezoneOffset() * 60000);
             return local.toISOString().slice(0,16);
           }
        %>
        <input 
          type="datetime-local" 
          id="scheduledTime" 
          name="scheduledTime"
          value="<%= toLocalDatetime(post.scheduled_time) %>"
        >
        <small>Select a future date and time for the post to be published</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </form>
  </div>

  <footer class="footer">
    <p>&copy; 2025 Social Media Management System (SMMS). All rights reserved.</p>
  </footer>

  <script>
    // Show/hide schedule time based on status
    const statusSelect = document.getElementById('status');
    const scheduleContainer = document.getElementById('scheduleContainer');
    const scheduledTimeInput = document.getElementById('scheduledTime');

    // Add initial hidden class if not scheduled
    if (statusSelect.value !== 'scheduled') {
      scheduleContainer.classList.add('hidden');
      scheduledTimeInput.removeAttribute('required');
    }

    function updateScheduleVisibility() {
      if (statusSelect.value === 'scheduled') {
        scheduleContainer.classList.remove('hidden');
        scheduledTimeInput.setAttribute('required', 'required');
        if (!scheduledTimeInput.value) {
          // Set default time to 1 hour from now
          const date = new Date();
          date.setHours(date.getHours() + 1);
          scheduledTimeInput.value = date.toISOString().slice(0, 16);
        }
      } else {
        scheduleContainer.classList.add('hidden');
        scheduledTimeInput.removeAttribute('required');
      }
    }

    // Update on status change
    statusSelect.addEventListener('change', updateScheduleVisibility);

    // Handle image removal checkbox
    const removeImageCheckbox = document.getElementById('removeImage');
    const imageInput = document.getElementById('image');

    if (removeImageCheckbox) {
      removeImageCheckbox.addEventListener('change', function() {
        if (this.checked) {
          imageInput.disabled = true;
        } else {
          imageInput.disabled = false;
        }
      });

      imageInput.addEventListener('change', function() {
        if (this.files.length > 0) {
          removeImageCheckbox.checked = false;
        }
      });
    }
  </script>
</body>
</html>