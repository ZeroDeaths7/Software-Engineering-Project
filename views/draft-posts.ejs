<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SMMS - Draft Posts</title>
  <link rel="stylesheet" href="/style.css?v=2">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <a href="/" class="logo">SMMS</a>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/posts/create">Create Post</a></li>
        <li><a href="/posts/drafts">Drafts</a></li>
        <li><a href="/posts/scheduled">Posts</a></li>
        <li><a href="/analytics">Analytics</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="page-header">
      <h1>Draft Posts</h1>
      <a href="/posts/create" class="btn btn-primary">+ Create New Post</a>
    </div>

    <% if (!posts || posts.length === 0) { %>
      <div class="empty-state">
        <p>üìù No draft posts yet.</p>
        <a href="/posts/create" class="btn btn-primary">Create your first post</a>
      </div>
    <% } else { %>
      <div class="posts-list">
        <% posts.forEach(post => { %>
          <div class="post-card">
            <div class="post-header">
              <h3><%= post.title || 'Untitled' %></h3>
              <small><%= new Date(post.created_at).toLocaleString() %></small>
            </div>

            <div class="post-content">
              <% if (post.image_path) { %>
                <img src="<%= post.image_path %>" alt="Post image" class="post-image">
              <% } %>
              <p><%= post.content.substring(0, 200) %>...</p>
            </div>

            <div class="post-actions">
              <button class="btn btn-secondary" onclick="editPost('<%= post.id %>')">
                Edit
              </button>
              <button class="btn btn-danger" onclick="deletePost('<%= post.id %>')">
                Delete
              </button>
              <button class="btn btn-primary" onclick="schedulePost('<%= post.id %>')">
                Schedule
              </button>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <footer class="footer">
    <p>&copy; 2025 Social Media Management System (SMMS). All rights reserved.</p>
  </footer>

  <script src="/modal.js?v=6"></script>
  <script>
    console.log('[Page] Draft posts page loaded');
    
    function deletePost(postId) {
      console.log('[deletePost] Called with postId:', postId);
      showConfirm(
        'Delete Post',
        'Are you sure you want to delete this post? This action cannot be undone.',
        () => {
          fetch(`/posts/${postId}`, { method: 'DELETE' })
            .then(res => res.json())
            .then(data => {
              if (data.success) {
                showAlert('Success', 'Post deleted successfully!', 'success', () => {
                  location.reload();
                });
              } else {
                showAlert('Error', data.message || data.error || 'Failed to delete post', 'error');
              }
            })
            .catch(err => {
              console.error('Delete error:', err);
              showAlert('Error', 'Failed to delete post', 'error');
            });
        }
      );
    }

    function schedulePost(postId) {
      console.log('[schedulePost] Called with postId:', postId);
      showSchedule(
        'Schedule Your Post',
        (scheduledTime) => {
          // scheduledTime is now in local ISO format: YYYY-MM-DDTHH:MM:SS
          console.log('[schedulePost] Received scheduled time:', scheduledTime);
          fetch('/posts/schedule', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
              postId: parseInt(postId), 
              scheduledTime: scheduledTime  // Send as-is, already in correct format
            })
          })
            .then(res => res.json())
            .then(data => {
              if (data.success) {
                showAlert('Success', 'Post scheduled successfully!', 'success', () => {
                  location.reload();
                });
              } else {
                showAlert('Error', data.error || 'Failed to schedule post', 'error');
              }
            })
            .catch(err => {
              console.error('Schedule error:', err);
              showAlert('Error', 'Failed to schedule post', 'error');
            });
        }
      );
    }

    function editPost(postId) {
      console.log('[editPost] Called with postId:', postId);
      window.location.href = `/posts/edit/${postId}`;
    }
  </script>
</body>
</html>
